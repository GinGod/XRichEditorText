<?xml version="1.0" encoding="utf-8"?>
<com.gingod.xricheditortextlib.ImageRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.gingod.xricheditortextlib.DataImageView
        android:id="@+id/edit_imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:src="@drawable/img_load_fail" />

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside"
        android:src="@mipmap/delete" />

</com.gingod.xricheditortextlib.ImageRelativeLayout>